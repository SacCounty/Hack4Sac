<table class="columns small-12">
<div class="row">
    <div class="columns">
    <%= link_to new_user_address_path(user_id: current_user.id) do %>
        <%= content_tag(:i, "", :class => "fa fa-plus fa-lg") %>
        New Address
    <% end %>
    </div>
</div>
  <thead>
    <tr>
      <th>Location Type</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% unless @addresses.empty? %>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= "#{address.address_type}".titleize %></td>
        <td><%= "#{address.street_address_1} #{address.street_address_2}".strip.titleize %></td>
        <td><%= "#{address.city}".titleize %></td>
        <td><%= "#{address.state}".titleize %></td>
        <td><%= "#{address.zip_code}".titleize %></td>
        <td><%= link_to 'Edit', edit_user_address_path(id: address.id, user_id: current_user.id) %></td>
        <td><%= link_to 'Remove', user_address_path(id: address.id, user_id: current_user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
<% end %>
</table>

